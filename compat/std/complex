#ifndef IGRIS_STD_COMPLEX_H
#define IGRIS_STD_COMPLEX_H
#include "igris_std_config.hpp"

#include <cmath>

namespace IGRIS_STD_NS
{
    template <class T> class complex
    {
        T re, im;

    public:
        complex(T r, T i) : re(r), im(i) {}
        complex(T r) : re(r) {}
        complex() : re(0), im(0) {}

        IGRIS_STD_NS::complex<T> operator*(const IGRIS_STD_NS::complex<T> &b)
        {
            return {re * b.re - im * b.im, re * b.im + im * b.re};
        }

        IGRIS_STD_NS::complex<T> &operator*=(const IGRIS_STD_NS::complex<T> &b)
        {
            *this = *this * b;
            return *this;
        }

        IGRIS_STD_NS::complex<T> operator+(const IGRIS_STD_NS::complex<T> &b)
        {
            return {re + b.re, im + b.im};
        }

        IGRIS_STD_NS::complex<T> operator-(const IGRIS_STD_NS::complex<T> &b)
        {
            return {re - b.re, im - b.im};
        }

        IGRIS_STD_NS::complex<T> &operator*=(T b)
        {
            re *= b;
            im *= b;
            return *this;
        }

        IGRIS_STD_NS::complex<T> &operator/=(T b)
        {
            re /= b;
            im /= b;
            return *this;
        }
    };

    template <class T> constexpr IGRIS_STD_NS::complex<T> conj(const IGRIS_STD_NS::complex<T> &z)
    {
        return IGRIS_STD_NS::complex<T>{z.real(), -z.imag()};
    }

    template <class T> complex<T> polar(const T &r, const T &theta = T())
    {
        return IGRIS_STD_NS::complex<T>{r * cos(theta), r * sin(theta)};
    }

    template <class T> T arg(const complex<T> &z)
    {
        return atan2(z.imag(), z.real());
    }

}

#endif
