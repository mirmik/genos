#ifndef IGRIS_STD_RATIO_H
#define IGRIS_STD_RATIO_H
#include "igris_std_config.hpp"

#include <cstdint>

namespace IGRIS_STD_NS
{
    template <IGRIS_STD_NS::intmax_t Num, IGRIS_STD_NS::intmax_t Denom = 1> class ratio
    {
    public:
        static constexpr IGRIS_STD_NS::intmax_t num = Num;
        static constexpr IGRIS_STD_NS::intmax_t den = Denom;
    };

    using atto = IGRIS_STD_NS::ratio<1, 1000000000000000000>;
    using femto = IGRIS_STD_NS::ratio<1, 1000000000000000>;
    using pico = IGRIS_STD_NS::ratio<1, 1000000000000>;
    using nano = IGRIS_STD_NS::ratio<1, 1000000000>;
    using micro = IGRIS_STD_NS::ratio<1, 1000000>;
    using milli = IGRIS_STD_NS::ratio<1, 1000>;
    using centi = IGRIS_STD_NS::ratio<1, 100>;
    using deci = IGRIS_STD_NS::ratio<1, 10>;
    using deca = IGRIS_STD_NS::ratio<10, 1>;
    using hecto = IGRIS_STD_NS::ratio<100, 1>;
    using kilo = IGRIS_STD_NS::ratio<1000, 1>;
    using mega = IGRIS_STD_NS::ratio<1000000, 1>;
    using giga = IGRIS_STD_NS::ratio<1000000000, 1>;
    using tera = IGRIS_STD_NS::ratio<1000000000000, 1>;
    using peta = IGRIS_STD_NS::ratio<1000000000000000, 1>;
    using exa = IGRIS_STD_NS::ratio<1000000000000000000, 1>;

    template <class R1, class R2> struct ratio_add
    {
        using type = IGRIS_STD_NS::ratio<R1::num * R2::den + R2::num * R1::den,
                                R1::den * R2::den>;
    };

    template <class R1, class R2> struct ratio_subtract
    {
        using type = IGRIS_STD_NS::ratio<R1::num * R2::den - R2::num * R1::den,
                                R1::den * R2::den>;
    };

    template <class R1, class R2> struct ratio_multiply
    {
        using type = IGRIS_STD_NS::ratio<R1::num * R2::num, R1::den * R2::den>;
    };

    template <class R1, class R2> struct ratio_divide
    {
        using type = IGRIS_STD_NS::ratio<R1::num * R2::den, R1::den * R2::num>;
    };
}

#endif
