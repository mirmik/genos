#ifndef IGRIS_STD_THREAD_H
#define IGRIS_STD_THREAD_H
#include "igris_std_config.hpp"

#include <chrono>

namespace IGRIS_STD_NS
{
    class thread
    {
        int _dummy;

    public:
        thread() {}
        template <typename T> thread(T) {}
        void join() {}
    };

    class this_thread
    {
    public:
        static void yield() {}

        static void sleep_for(IGRIS_STD_NS::chrono::milliseconds) {}
    };
}

#endif
