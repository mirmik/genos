#ifndef IGRIS_STD_ISTREAM_H
#define IGRIS_STD_ISTREAM_H
#include "igris_std_config.hpp"

#include <ios>
#include <string>

namespace IGRIS_STD_NS
{

    template <class CharT, class Traits> class basic_istream
    {
    public:
        operator bool() const
        {
            return false;
        }
        virtual ~basic_istream() = default;
    };

    using istream = basic_istream<char, char_traits<char>>;

    template <class CharT, class Traits>
    IGRIS_STD_NS::basic_istream<CharT, Traits> &
    getline(IGRIS_STD_NS::basic_istream<CharT, Traits> &input, IGRIS_STD_NS::string &str)
    {
        (void)str;
        // str.clear();
        return input;
    }

    template <class CharT, class Traits>
    IGRIS_STD_NS::basic_istream<CharT, Traits> &
    operator>>(IGRIS_STD_NS::basic_istream<CharT, Traits> &input, IGRIS_STD_NS::string &str)
    {
        (void)str;
        // str.clear();
        return input;
    }
}

#endif
