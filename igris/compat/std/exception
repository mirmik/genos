#ifndef IGRIS_STD_EXCEPTION_H
#define IGRIS_STD_EXCEPTION_H
#include "igris_std_config.hpp"

#include <string>
#include "string"

namespace IGRIS_STD_NS
{
    class exception
    {
    public:
        exception(const IGRIS_STD_NS::string &msg) : m_msg(msg)
        {
            m_msg.c_str();
        }

        const char *what() const
        {
            return m_msg.c_str();
        }

    private:
        IGRIS_STD_NS::string m_msg;
    };

    bool uncaught_exception();
}

#endif
