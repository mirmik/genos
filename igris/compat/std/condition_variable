#ifndef IGRIS_STD_CONDITION_VARIABLE_H
#define IGRIS_STD_CONDITION_VARIABLE_H
#include "igris_std_config.hpp"

#include <mutex>

namespace IGRIS_STD_NS
{
    class condition_variable
    {
        int _dummy;

    public:
        condition_variable() {}
        void notify_one() {}
        void notify_all() {}

        template <typename T, class F> void wait(T &lock, F f)
        {
            lock.unlock();
            f();
            lock.lock();
        }

        // wait_for
        template <typename T, class F> void wait_for(T &lock, int, F f)
        {
            lock.unlock();
            f();
            lock.lock();
        }
    };
}

#endif
